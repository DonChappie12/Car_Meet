@model ValidateUser
<div class="form">
    <h3>Register for FREE</h3>
    <form asp-action="Register" asp-home="Home" method="POST">
        <span asp-validation-for="FirstName"></span>
        <p>First Name: <input asp-for="FirstName"></p>
    
        <span asp-validation-for="LastName"></span>
        <p>Last Name: <input asp-for="LastName"></p>
    
        <span asp-validation-for="Email"></span>
        <p>Email: <input asp-for="Email"></p>
    
        <span asp-validation-for="Password"></span>
        <p>Password: <input asp-for="Password"></p>
    
        <span asp-validation-for="ConfirmPassword"></span>
        <p>Confirm Password: <input asp-for="ConfirmPassword"></p>
        <button>Register Now</button>
    </form>
    <br>
    <a href="/login">Already a member?</a>
</div>